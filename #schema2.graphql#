type Bucket 
  @model @auth (rules: [{allow:owner}])
{
  id: ID!
  bucketFiles: [Files] @connection(name:"BucketFiles")
  bucketMetadata: [Metadata] @connection(name:"BucketMetadata")
  bucketPermissions: [Permissions] @connection(name:"BucketPermissions")
  bucketSubFolders: [SubFolders] @connection(name:"BucketSubFolders")
}

type Files @model @auth (rules: [{allow:owner}])
{
  id: ID!
  name: String
  bucket: Bucket @connection(name:"BucketFiles")
}

type Metadata @model @auth (rules: [{allow:owner}])
{
  id: ID!
  createdAt: String!
  name: String!
  parentFolder: String!
  bucket: Bucket @connection(name:"BucketMetadata")
}

type Permissions @model @auth (rules: [{allow:owner}])
{
  id: ID!
  autoDelete: Int
  owner: String!
  bucket: Bucket @connection(name:"BucketPermissions")
}

type SubFolders @model @auth (rules: [{allow:owner}])
{
  id: ID!
  name: String!
  bucket: Bucket @connection(name:"BucketSubFolders")
}

